<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:text="Saralash turi"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outcome"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_outcome"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:text="Chiqim"
        android:textColor="#FF000C"
        android:textSize="19sp"
        app:layout_constraintLeft_toLeftOf="@id/tv"
        app:layout_constraintTop_toBottomOf="@id/tv" />

    <TextView
        android:id="@+id/income"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_income"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:text="Kirim"
        android:textColor="#00FB23"
        android:textSize="19sp"
        app:layout_constraintLeft_toRightOf="@id/outcome"
        app:layout_constraintTop_toBottomOf="@id/tv" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lato_regular"
        android:text="Xarajat turi"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outcome" />

    <TextView
        android:id="@+id/transport"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_expense"
        android:drawableStart="@drawable/ic_transportation1"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Transport"
        android:textColor="#3A2BE9"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <TextView
        android:id="@+id/taomlanish"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_expense"
        android:drawableStart="@drawable/ic_dish1"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Taomlanish"
        android:textColor="#3A2BE9"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/transport"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <TextView
        android:id="@+id/bozor"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_expense"
        android:drawableStart="@drawable/ic_shopping1"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Bozor"
        android:textColor="#3A2BE9"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/transport"
        app:layout_constraintTop_toBottomOf="@id/transport" />

    <TextView
        android:id="@+id/kommunal"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_expense"
        android:drawableStart="@drawable/ic_kommunal1"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Kommunal"
        android:textColor="#3A2BE9"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/bozor"
        app:layout_constraintTop_toBottomOf="@id/taomlanish" />

    <ImageView
        android:id="@+id/filter"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_filter1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kommunal" />

</androidx.constraintlayout.widget.ConstraintLayout>